---
import { slugify } from '@/lib/utils';

interface Props {
  tags: string[];
  showLinks?: boolean;
  size?: 'sm' | 'md';
}

const { tags, showLinks = true, size = 'md' } = Astro.props;

const sizeClasses = {
  sm: 'px-2 py-0.5 text-xs',
  md: 'px-3 py-1 text-sm',
};
---

<div class="flex flex-wrap gap-2">
  {tags.map((tag) => (
    showLinks ? (
      <a
        href={`/blog/tag/${slugify(tag)}`}
        class:list={[
          'inline-flex items-center rounded-md font-medium border border-border bg-muted/50 text-muted-foreground hover:bg-muted hover:text-foreground transition-colors',
          sizeClasses[size],
        ]}
      >
        #{tag}
      </a>
    ) : (
      <span
        class:list={[
          'inline-flex items-center rounded-md font-medium border border-border bg-muted/50 text-muted-foreground',
          sizeClasses[size],
        ]}
      >
        #{tag}
      </span>
    )
  ))}
</div>
